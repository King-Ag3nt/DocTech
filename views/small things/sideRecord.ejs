<div class="col-12 mx-3 scroll-test" style="max-width: 300px; max-height: 90vh; overflow-y: scroll; word-break: break-word; overflow-x: hidden;">
  <h1 class="mt-5 border-bottom">Medical Info</h1>
  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">Last Plan</h3>
    </div>
    <div class="col-12">
      <h5 class="text-warning"><%=patient[0].patientRecord[patient[0].patientRecord.length - 1].plan || 'No data found'%></h5>
    </div>
  </div>

  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">DMD'S</h3>
    </div>
    <%patient[0].patientRecord[patient[0].patientRecord.length - 1].DMD?.forEach(DMDd => {%>
    <%if(DMDd){%>
    <div class="col-12">
      <h5 class="text-warning"><%=DMDd.Type || 'No data found'%></h5>
    </div>
    <div class="col-12 fs-5">
      <p><%=DMDd.onGoing ? "Dmd on going" : "Dmd ended"%></p>
    </div>
    <div class="col-12 fs-5">
      <p><%=DMDd.description || 'No data found'%></p>
    </div>
    <%}%>
    <%})%>
  </div>

  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">Complaints</h3>
    </div>
    <%patient[0].patientRecord.forEach(element => {%>
    <%element.complaints.forEach(complain => {%>
    <div class="col-12">
      <h5 class="text-warning"><%=complain.title || 'No data found'%></h5>
    </div>
    <div class="col-12 fs-5">
      <p><%=complain.comment || 'No data found'%></p>
    </div>
    <%})%>
    <%})%>
  </div>
  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">Examination</h3>
    </div>
    <%patient[0].patientRecord.forEach(element => {%>
    <%element.examination.forEach(examinatio => {%>
    <div class="col-12">
      <h5 class="text-warning"><%=examinatio.title || 'No data found'%></h5>
    </div>
    <div class="col-12 fs-5">
      <p><%=examinatio.comment || 'No data found'%></p>
    </div>
    <%})%>
    <%})%>
  </div>
  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">Investigations Results</h3>
    </div>

    <%patient[0].patientRecord[patient[0].patientRecord.length - 1].pastRadiology.forEach(pastRadiology => {%>
    <div class="col-12">
      <h5 class="text-warning"><%=pastRadiology.title || 'No data found'%></h5>
    </div>
    <div class="col-12 fs-5">
      <p><%=pastRadiology.comment || 'No data found'%></p>
    </div>
    <div class="col-12 fs-5">
      <p><%=pastRadiology.date?.toISOString().split('T')[0]%></p>
    </div>
    <%})%>

  </div>
  <div class="row mt-3 border-bottom">
    <div class="col-12 ">
      <h3 class="text-info">Current Medications</h3>
    </div>

    <%patient[0].patientRecord[patient[0].patientRecord.length - 1].currentMedications.forEach(currentMedication => {%>
    <div class="col-12">
      <h5 class="text-warning"><%=currentMedication.title || 'No data found'%></h5>
    </div>
    <div class="col-12 fs-5">
      <p><%=currentMedication.description || 'No data found'%></p>
    </div>
    <%})%>

  </div>
</div>